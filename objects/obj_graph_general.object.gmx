        else               //Second click 
        {
            var into;
            into = false;
            with (line_start)
            {
                if ((a.x != s_x) || (a.y != s_y))   
                {
                    f_x = a.x;
                    f_y = a.y;
                    into = true;
                }
                x = (s_x + f_x) / 2;
                y = (s_y + f_y) / 2;
            }
